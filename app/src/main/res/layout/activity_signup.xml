<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABC5F3"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".signup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relLayout1"
                android:padding="15dp">
                <TextView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#A897F3"
                    android:gravity="center"
                    android:text="Registerion From"
                    android:textColor="@color/black"
                    android:textSize="15dp" />



                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/img"
                    android:hint="Name"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:layout_below="@+id/name"
                    />


                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="password"
                    android:layout_below="@+id/input_email"/>

                <EditText
                    android:id="@+id/input_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="confirm password"
                    android:layout_below="@+id/input_password"/>
                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Phone number"
                    android:layout_below="@+id/input_confirm_password"/>
                <TextView
                    android:id="@+id/group"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="#A897F3"
                    android:gravity="center"
                    android:text="Blood Group"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_below="@+id/phone"/>


                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/phone"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />
                <RadioGroup
                    android:id="@+id/radio"
                    android:layout_below="@+id/group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:onClick="onRadioButtonClicked"
                    android:layout_marginTop="10dp"

                    android:text="I am not donate blood before"
                    android:textColor="#154"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/group"
                    tools:ignore="OnClick" />
                </RadioGroup>
                <TextView
                    android:id="@+id/or"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#A897F3"
                    android:gravity="center"
                    android:text="OR"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_below="@+id/radio"
                    />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="#A897F3"
                    android:gravity="center"
                    android:text="Last Date Blood Donation"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"

                    android:layout_below="@+id/or"/>
                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/or"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />
                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/or"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />
                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/or"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />


                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#9671C2"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:layout_below="@+id/date"
                    android:text="Submit"
                    />

                <TextView
                    android:id="@+id/orid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_register"
                    android:gravity="center"
                    android:text="----------------------------------- or -----------------------------------"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_below="@+id/orid"
                    android:id="@+id/signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="80dp"
                    android:text="Are you not registered ? Sign Up" />

            </RelativeLayout>



        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:visibility="invisible"/>

</RelativeLayout>